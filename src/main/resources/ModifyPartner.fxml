<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300" prefWidth="400" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="gui.ModifyPartnerController">
   <children>
   
       <VBox alignment="CENTER" layoutX="20" layoutY="20" prefWidth="360" spacing="10">
      <children>
              <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Modify Partner" />
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="80" text="Name:" />
                     <TextField fx:id="nameField" prefWidth="200" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="80" text="Type:" />
                     <ChoiceBox fx:id="typeField" prefWidth="200" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="80" text="Contact:" />
                     <TextField fx:id="contactField" prefWidth="200" />
         </children>
              </HBox>
      
              <HBox spacing="10">
         <children>
                     <Label prefWidth="80" text="Image Path :" />
                     <TextField fx:id="videoField" prefWidth="200" />
         </children>
              </HBox>
      
              <Button fx:id="btnUpdate" onAction="#updatePartner" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Update Partner" />
      </children>
       </VBox>
   </children>

</AnchorPane>
